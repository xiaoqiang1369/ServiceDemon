<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.leon.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".services.MyService" />
        <service android:name=".services.SimpleService" />
        <service android:name=".services.BindService" />
        <service android:name=".services.BgService" />
        <service android:name=".services.MessengerService"/>

        <activity android:name=".Main2Activity" />
        <activity android:name=".Main3Activity"></activity>
    </application>

</manifest>